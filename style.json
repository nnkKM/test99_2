{
  "version": 8,
  "name": "Simple OSM",
  "sources": {
    "osm-tiles": {
      "type": "raster",
      "tiles": [
        "https://tile.openstreetmap.org/{z}/{x}/{y}.png"
      ],
      "minzoom": 1,
      "maxzoom": 18,
      "tileSize": 256,
      "attribution": "Â© <a href=\"https://www.openstreetmap.org/copyright\" target=\"_blank\">OpenStreetMap</a> contributors"
    },
    "population-source": {
      "type": "vector",
      "tiles": [
        "pmtiles://https://data.source.coop/smartmaps/h3ys-worldpop/tha.pmtiles/{z}/{x}/{y}"
      ],
      "minzoom": 4,
      "maxzoom": 12
    },
    "PublicTransport-source": {
      "type": "vector",
      "tiles": [
        "pmtiles://https://nnkhij.github.io/test99/data/output.pmtiles/{z}/{x}/{y}"
      ],
      "minzoom": 4,
      "maxzoom": 14
    }
  },
  "layers": [
    {
      "id": "osm-layer",
      "type": "raster",
      "source": "osm-tiles",
      "minzoom": 0,
      "maxzoom": 19,
      "paint": {
        "raster-saturation": -0.5
      }
    },
    {
      "id": "population-fill-layer",
      "type": "fill",
      "source": "population-source",
      "source-layer": "pop",
      "paint": {
        "fill-color": "#ffffff",
        "fill-opacity": 0.5
      }
    },
    {
      "id": "population-outline-layer",
      "type": "line",
      "source": "population-source",
      "source-layer": "pop",
      "paint": {
        "line-color": "#c0c0c0",
        "line-width": [
        "interpolate",
        ["linear"],
        ["zoom"],
        4, 0.2,
        14, 1
      ]
      }
    },
    {
      "id": "popchange-fill-layer",
      "type": "fill",
      "source": "population-source",
      "source-layer": "pop",
      "paint": {
        "fill-color": "#ffffff",
        "fill-opacity": 0.5
      }
    },
    {
      "id": "popchange-outline-layer",
      "type": "line",
      "source": "population-source",
      "source-layer": "pop",
      "paint": {
        "line-color": "#c0c0c0",
        "line-width": [
        "interpolate",
        ["linear"],
        ["zoom"],
        4, 0.2,
        14, 1
      ]
      }
    },
    {
      "id": "PublicTransport-points-layer",
      "type": "circle",
      "source": "PublicTransport-source",
      "source-layer": "PublicTransport",
      "paint": {
      "circle-radius": [
        "interpolate",
        ["linear"],
        ["zoom"],
        4, 1,
        14, 6
      ],
        "circle-color": [
          "match",
          ["get", "amenity"],
          "ferry_terminal", "#0000FF",
          "bus_stop","#00FF00",
          "bus_staition","#00FF00",
          "#ff8c00"
        ],
        "circle-stroke-width": [
        "interpolate",
        ["linear"],
        ["zoom"],
        4, 0.2,
        14, 1
      ],
        "circle-stroke-color": "#000000"
      }
    }
  ]
}
